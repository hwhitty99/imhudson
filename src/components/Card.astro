---
const { title, content, link } = Astro.props;
---

<section
  x-data="{ shown: false }"
  x-intersect.once.full="shown = true"
  class="min-h-[100px]"
>
  <div
    class="flex flex-col gap-4 rounded-2xl p-6 bg-black-800"
    x-show="shown"
    x-transition.duration.700ms
  >
    <h2 class="text-xl font-bold">{title}</h2>
    <slot />
    <a
      href={link}
      class="inline-block font-bold group hover:text-red-500 transition-colors mt-auto"
      >Learn more <i
        class="fa-solid fa-arrow-right pl-1 group-hover:translate-x-1 transition-transform"
      ></i>
    </a>
  </div>
</section>
