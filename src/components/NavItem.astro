---
const { page, href, class: className } = Astro.props;
---

<li role="menuitem">
    <a
        href={href}
        x-ref={page}
        @mouseover=`hoveredNavItem = '${page}'`
        @mouseleave="hoveredNavItem = activePage"
        @focusin=`hoveredNavItem = '${page}'`
        @focusout="hoveredNavItem = activePage"
        @click=`activePage = '${page}'`
        class="block rounded-xl px-4 py-2 capitalize mix-blend-exclusion outline-none transition-colors focus-visible:underline"
        class:list={[className]}
        :class=`{ 'max-md:bg-white max-md:text-black': isActive('${page}')  }`
        :aria-current=`isActive('${page}') ? 'page' : 'false'`
    >
        {page}
    </a>
</li>
