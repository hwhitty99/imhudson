---
const { page, href } = Astro.props;
---

<li role="menuitem">
    <a
        href={href}
        x-ref={page}
        @mouseover=`hoveredNavItem = '${page}'`
        @mouseleave="hoveredNavItem = activePage"
        @focusin=`hoveredNavItem = '${page}'`
        @focusout="hoveredNavItem = activePage"
        class="block rounded-xl px-4 py-2 capitalize outline-none transition-colors duration-500 focus-within:underline"
        :class=`{ 'max-md:bg-white max-md:text-black': isActive('${page}'), 'text-black': isActive('${page}') && hoveredNavItem == '${page}', 'md:text-black': !isActive('${page}') && hoveredNavItem == '${page}' }`
        :aria-current=`isActive('${page}') ? 'page' : 'false'`
    >
        {page}
    </a>
</li>
