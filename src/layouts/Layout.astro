---
import "@fontsource/poppins";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "@fontsource/poppins/800.css";
import "@fontsource/poppins/900.css";
import Nav from "../components/Nav.astro";
import favicon from "../assets/favicon.svg";
import "../styles/style.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const devMode = import.meta.env.DEV;
---

<!DOCTYPE html>
<html
  lang="en"
  x-data=`{darkMode: window.matchMedia('(prefers-color-scheme: dark)').matches, devMode: ${devMode}}`
  :class="darkMode ? 'dark bg-black text-white' : ''"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/svg+xml" href={favicon} />

    <script
      src="https://kit.fontawesome.com/b12c42c201.js"
      crossorigin="anonymous"
    ></script>

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Nav />
    <slot />
  </body>
  <b
    x-show="devMode"
    class="fixed top-0 right-0 flex items-center justify-center w-12 h-12 text-center text-white bg-black bg-opacity-50 rounded-bl-xl"
  >
    <span class="sm:hidden"> xs</span>
    <span class="hidden sm:inline md:hidden"> sm</span>
    <span class="hidden md:inline lg:hidden"> md</span>
    <span class="hidden lg:inline xl:hidden"> lg</span>
    <span class="hidden xl:inline 2xl:hidden"> xl</span>
    <span class="hidden 2xl:inline"> 2xl</span>
  </b>
</html>
